<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.handigab_porteur"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="HandiGabPorteurApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
       	android:theme="@style/AppTheme"
       	android:label="@string/app_name"
       	>
       
        <activity
            android:name="com.example.handigab_porteur.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" 
            android:clearTaskOnLaunch="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.handigab_porteur.Initialize"
            android:label="@string/title_activity_initialize"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.ServiceActivity"
            android:label="@string/title_activity_service"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.WithdrawalActivity"
            android:label="@string/title_activity_withdrawal"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.AuthentificationActivity"
            android:label="@string/title_activity_authentification"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.Wait"
            android:label="@string/title_activity_wait"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.Money"
            android:label="@string/title_activity_money"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.Account"
            android:label="@string/title_activity_account"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.AmountActivity"
            android:label="@string/title_activity_amount"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.CardsActivity"
            android:label="@string/title_activity_cards"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
        <activity
            android:name="com.example.handigab_porteur.InformationActivity"
            android:label="@string/title_activity_information"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true" >
        </activity>
    </application>
   
</manifest>
