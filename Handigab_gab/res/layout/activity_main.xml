<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textSize="@dimen/Size24dp" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="2" >

        <Button
            android:id="@+id/withdrawalButton"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="@string/withdrawal" />

        <Button
            android:id="@+id/accountViewButton"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|bottom"
            android:layout_row="0"
            android:text="@string/view_account" />
    </GridLayout>

    <TextView
        android:id="@+id/bluetoothWarningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="@string/bluetooth_activation_warning"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/appDownloadWarningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluetoothWarningTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="@string/application_download_warning"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>