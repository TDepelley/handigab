<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    tools:context=".RunningOperation" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->

    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

    <GridLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="3" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="111dp"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_row="0"
            android:columnCount="3"
            android:rowCount="1" >

            <ImageView
                android:id="@+id/logoEnsiImageView"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:background="#FFFFFF"
                android:contentDescription="@string/logo_ensi"
                android:src="@drawable/logoensi" />

            <ImageView
                android:id="@+id/logoUCBNImageView"
                android:layout_width="355dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:background="#FFFFFF"
                android:contentDescription="@string/logo_ucbn"
                android:src="@drawable/logoucbn" />

            <ImageView
                android:id="@+id/logoDieboldImageView"
                android:layout_width="450dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:background="#FFFFFF"
                android:contentDescription="@string/logo_diebold"
                android:src="@drawable/logodiebold" />
        </GridLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_column="0"
            android:layout_gravity="fill_vertical"
            android:layout_row="1" />

        <ImageView
            android:id="@+id/phoneLogoImageView"
            android:layout_column="0"
            android:layout_row="2"
            android:contentDescription="@string/logo_phone"
            android:src="@drawable/phone" />

    </GridLayout>

</FrameLayout>
